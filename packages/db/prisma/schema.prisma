generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String
  password String
  photo    String?

  // relation to rooms where user is admin
  adminRooms Room[] @relation("AdminRooms")

  // relation to rooms where user is a member
  memberRooms Room[] @relation("MemberRooms")
}

model Room {
  id      String @id @default(uuid())
  slug    String
  adminId String

  // admin relation
  admin   User   @relation("AdminRooms", fields: [adminId], references: [id])

  // members relation
  members User[] @relation("MemberRooms")
}