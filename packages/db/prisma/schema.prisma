generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String
  password String
  photo    String?

  // relation to rooms where user is admin
  adminRooms Room[] @relation("AdminRooms")

  // relation to rooms where user is a member
  memberRooms Room[] @relation("MemberRooms")

  // relation to chat
  chat Chat[]
}

model Room {
  id      String @id @default(uuid())
  slug    String
  adminId String

  // admin relation
  admin User @relation("AdminRooms", fields: [adminId], references: [id])

  // members relation
  members User[] @relation("MemberRooms")

  // chat relation
  chat Chat[]
}

model Chat {
  id        String   @id @default(uuid())
  message   String
  createdAt DateTime @default(now())

  // relation to the user who sent the message
  userId String
  user   User   @relation(fields: [userId], references: [id])

  // relation to the room where the message was sent
  roomId String
  room   Room   @relation(fields: [roomId], references: [id])

  // soft deletion fields
  isDeleted Boolean   @default(false)
  deletedAt DateTime?
}
